<?xml version="1.0" encoding="utf-8"?>

<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context="ht.albrec.runningdata.RunningDataActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="54dp"
                android:layout_height="38dp"
                android:layout_column="0"
                android:layout_row="0" />

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="108dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_row="0"
                android:textOff="Resume"
                android:textOn="Pause" />

            <Button
                android:id="@+id/closeButton"
                android:layout_width="108dp"
                android:layout_height="36dp"
                android:layout_column="1"
                android:layout_row="6"
                android:text="Close" />

            <Space
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_column="2"
                android:layout_row="0" />

            <TextView
                android:id="@+id/allLabel"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="*"
                android:textSize="20dp"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/allValue"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:paddingLeft="4dp"
                android:textSize="20dp"
                android:text="" />

            <TextView
                android:id="@+id/kmLabel"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="km"
                android:textSize="20dp"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/kmValue"
                android:paddingLeft="4dp"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:textSize="20dp"
                android:text="" />

            <TextView
                android:id="@+id/hmLabel"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="hm"
                android:textSize="20dp"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/hmValue"
                android:paddingLeft="4dp"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:textSize="20dp"
                android:text="" />

            <TextView
                android:id="@+id/distLabel"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:text="dist"
                android:textSize="20dp"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/distValue"
                android:paddingLeft="4dp"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:textSize="20dp"
                android:text="" />

            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="time"
                android:textSize="20dp"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/timeValue"
                android:paddingLeft="4dp"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:textSize="20dp"
                android:text="" />

            <TextView
                android:id="@+id/errLabel"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="5"
                android:text="gps"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/errValue"
                android:paddingLeft="4dp"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="6"
                android:textSize="20dp"
                android:text="" />

            <TextView
                android:id="@+id/batLabel"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                android:textSize="20dp"
                android:text="bat" />

            <TextView
                android:id="@+id/batValue"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="4"
                android:textSize="20dp"
                android:text="" />

            <TextView
                android:id="@+id/hrLabel"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:textSize="20dp"
                android:text="HR" />

            <TextView
                android:id="@+id/hrValue"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:textSize="20dp"
                android:text="" />

        </GridLayout>
    </FrameLayout>

</android.support.wear.widget.BoxInsetLayout>

